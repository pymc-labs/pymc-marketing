msgid ""
"\n"
"g\\!\\big(\\mathbb{E}[Y_t]\\big)\n"
"=\\alpha\n"
"+\\sum_i f_i\\!\\big(e_{i,t}\\big)\n"
"+\\sum_m \\beta_{Z_m} Z_{m,t}\n"
"+s_{\\text{trend}}(t)\n"
"+s_{\\text{season}}(t),\n"
msgstr ""
"g\\!\\big(\\mathbb{E}[Y_t]\\big)\n"
"=\\alpha\n"
"+\\sum_i f_i\\!\\big(e_{i,t}\\big)\n"
"+\\sum_m \\beta_{Z_m} Z_{m,t}\n"
"+s_{\\text{trend}}(t)\n"
"+s_{\\text{season}}(t),"

